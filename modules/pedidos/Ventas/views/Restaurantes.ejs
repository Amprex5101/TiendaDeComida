<script>
    // Agregar evento de clic a todas las tarjetas
    document.querySelectorAll(".restaurante-card").forEach(card => {
        card.addEventListener("click", function () {
            window.location.href = "/pedidos/Ventas/Menu1"; // Redirigir a la página deseada
        });
    });

    // Agregar evento de clic a los botones de promociones
    document.querySelectorAll('.restaurante-promociones button').forEach(button => {
        button.addEventListener('click', function () {
            const targetId = this.getAttribute('data-target'); // Obtener el ID del destino
            const targetElement = document.getElementById(targetId); // Seleccionar el elemento correspondiente

            if (targetElement) {
                targetElement.scrollIntoView({ behavior: 'smooth', block: 'start' }); // Desplazamiento suave al destino
            }
        });
    });
</script>