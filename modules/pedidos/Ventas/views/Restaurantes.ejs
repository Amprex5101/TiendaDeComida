<script>
    document.querySelector(".card1").addEventListener("click", function(event) {
        // Prevenir la propagación del clic para evitar que el botón intercepte el evento
        event.stopPropagation();
        window.location.href = "/pedidos/Ventas/Menu1";
    });
    document.querySelectorAll('.restaurante-promociones button').forEach(button => {
    button.addEventListener('click', function() {
      const targetId = this.getAttribute('data-target'); // Obtener el ID del destino
      const targetElement = document.getElementById(targetId); // Seleccionar el elemento

      if (targetElement) {
        targetElement.scrollIntoView({ behavior: 'smooth', block: 'start' }); // Desplazamiento suave
      }
    });
  });
</script>